<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ListHewanDarat">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSoftGreen"
            android:orientation="vertical"
            android:padding="26dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/msemibold"
                android:text="Hewan"
                android:textColor="@color/colorWhite"
                android:textSize="26sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/mregular"
                android:text="Berdasarkan Tempat Tinggal"
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/darat"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/darat" />

                <ImageView
                    android:id="@+id/laut"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/laut" />

                <ImageView
                    android:id="@+id/udara"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/udara" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/darat1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorBody"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/msemibold"
                android:padding="10dp"
                android:text="Hewan Darat"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp" />

            <RelativeLayout
                android:id="@+id/anjing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:padding="10dp">

                <com.infinityandroid.roundedimageview.RoundedImageView
                    android:id="@+id/img_anjing"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/anjing"
                    app:corner_radius="10" />

                <View
                    android:id="@+id/card1"
                    android:layout_width="200dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/img_anjing"
                    android:background="@drawable/card_item" />

                <TextView
                    android:id="@+id/judul1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="40dp"
                    android:layout_toRightOf="@id/img_anjing"
                    android:fontFamily="@font/msemibold"
                    android:text="Anjing"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/judul1"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/img_anjing"
                    android:fontFamily="@font/mregular"
                    android:text="Canis lupus familiaris"
                    android:textColor="@color/colorSecondary"
                    android:textSize="12sp"
                    android:textStyle="italic" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/kucing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <com.infinityandroid.roundedimageview.RoundedImageView
                    android:id="@+id/img_kucing"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/kucing"
                    app:corner_radius="10" />

                <View
                    android:id="@+id/card2"
                    android:layout_width="200dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/img_kucing"
                    android:background="@drawable/card_item" />

                <TextView
                    android:id="@+id/judul2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="40dp"
                    android:layout_toRightOf="@id/img_kucing"
                    android:fontFamily="@font/msemibold"
                    android:text="Kucing"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/judul2"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/img_kucing"
                    android:fontFamily="@font/mregular"
                    android:text="Felis catus"
                    android:textColor="@color/colorSecondary"
                    android:textSize="12sp"
                    android:textStyle="italic" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/gajah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <com.infinityandroid.roundedimageview.RoundedImageView
                    android:id="@+id/img_gajah"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/gajah"
                    app:corner_radius="10" />

                <View
                    android:id="@+id/card3"
                    android:layout_width="200dp"
                    android:layout_height="80dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@id/img_gajah"
                    android:background="@drawable/card_item" />

                <TextView
                    android:id="@+id/judul3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="40dp"
                    android:layout_toRightOf="@id/img_gajah"
                    android:fontFamily="@font/msemibold"
                    android:text="Gajah"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/judul3"
                    android:layout_marginLeft="16dp"
                    android:layout_toRightOf="@id/img_gajah"
                    android:fontFamily="@font/mregular"
                    android:text="Chordata"
                    android:textColor="@color/colorSecondary"
                    android:textSize="12sp"
                    android:textStyle="italic" />
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>